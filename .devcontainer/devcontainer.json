{
    "name": "CAP Local Development Workshop Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "22"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "mechatroner.rainbow-csv",
                "dbaeumer.vscode-eslint",
                "sapse.vscode-cds",
                "sapse.vsc-extension-odata-csdl-modeler",
                "sapse.vscode-wing-cds-editor-vsc",
                "saposs.xml-toolkit",
                "humao.rest-client"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/sshd:1": {
            "version": "latest"
        }
    },
    "forwardPorts": [
        4004,
        4005,
        5005,
        9229
    ],
    "remoteUser": "node"
}
